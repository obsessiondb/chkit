{
  "name": "chx",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:env": "doppler run --project chx --config ci -- bun run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "clean": "turbo run clean",
    "chx": "bun run ./packages/cli/src/bin/chx.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.0.0",
    "turbo": "^2.1.0",
    "typescript": "^5.8.0"
  }
}
